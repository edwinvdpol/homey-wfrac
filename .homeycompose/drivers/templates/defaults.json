{
  "name": {
    "en": "Air conditioner",
    "nl": "Airconditioner"
  },
  "class": "airconditioning",
  "capabilities": [
    "operating_mode",
    "fan_speed",
    "vertical_position",
    "horizontal_position",
    "measure_temperature.outdoor",
    "measure_temperature",
    "target_temperature",
    "onoff",
    "3d_auto"
  ],
  "capabilitiesOptions": {
    "measure_temperature": {
      "title": {
        "en": "Indoor temperature",
        "nl": "Binnentemperatuur"
      },
      "desc": {
        "en": "Indoor temperature in degrees Celsius (째C)",
        "nl": "Binnentemperatuur in graden Celsius (째C)"
      }
    },
    "measure_temperature.outdoor": {
      "title": {
        "en": "Outdoor temperature",
        "nl": "Buitentemperatuur"
      },
      "desc": {
        "en": "Outdoor temperature in degrees Celsius (째C)",
        "nl": "Buitentemperatuur in graden Celsius (째C)"
      }
    },
    "target_temperature": {
      "min": 18,
      "max": 30,
      "step": 0.5
    }
  },
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "discovery": "beaver",
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Connectivity",
        "nl": "Connectiviteit"
      },
      "children": [
        {
          "$extends": "ip_address"
        },
        {
          "$extends": "ip_address_manual"
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Product",
        "nl": "Product"
      },
      "children": [
        {
          "$extends": "accounts"
        },
        {
          "$extends": "firmware_type"
        },
        {
          "$extends": "wifi_firmware"
        },
        {
          "$extends": "mcu_firmware"
        }
      ]
    }
  ]
}
